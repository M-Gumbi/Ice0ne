<Window x:Class="WordScramble.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Scramble Game" Height="350" Width="400">
    <Grid>
        <Label Content="Word Scramble Game" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,10,0" FontSize="20"/>
        <Button Name="PlayButton" Content="PLAY" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,50,10,0" Click="PlayButton_Click"/>
        <Label Name="ScrambledWordLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,90,10,0" FontSize="16"/>
        <TextBox Name="GuessTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,140,10,0" Width="200"/>
        <Button Name="CheckButton" Content="CHECK" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,180,10,0" Click="CheckButton_Click"/>
    </Grid>
</Window>
